              <osFamily>debian7,ubuntu12,ubuntu14</osFamily>
              <packages>
                <package>
                  <name>spark-2-4-.*</name>
                </package>
                <package>
                  <name>spark-2-4-.*-python</name>
                </package>
              </packages>
            </osSpecific>
          </osSpecifics>
